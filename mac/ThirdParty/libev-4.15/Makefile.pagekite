
SOURCES = ev.c \
    ev_epoll.c \
    ev_poll.c \
    ev_select.c \
    ev_win32.c \
    event.c \
    ev++.h \
    ev.h \
    ev_kqueue.c \
    ev_port.c \
    ev_vars.h \
    ev_wrap.h \
    event.h

LIBS =  libev-osx.a libev-ios.a 

all: all_libs

.PHONY: clean libs all

libev-ios.a: $(SOURCES)
	./compile.py ios 

libev-osx.a: $(SOURCES)
	./compile.py osx 

all_libs: $(LIBS)

clean:
	echo Nothing to clean. Do \'make -f $(MAKEFILE_LIST) dist_clean\' to remove libraries.

dist_clean:
	rm -rf $(LIBS)

